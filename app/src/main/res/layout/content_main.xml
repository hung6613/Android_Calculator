<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.applycation.calculator.MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:id="@+id/layout_output"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_M"
        android:weightSum="10"

        android:background="#bebcbc">
        <TextView
            android:gravity="right"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5 x 5 = 25"
            android:id="@+id/text_SmallResult"
            android:layout_weight="3"
            android:textColor="#000000" />

        <TextView

            android:gravity="right"
            android:textSize="80sp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="25"
            android:textStyle="bold"
            android:id="@+id/text_Result"
            android:layout_weight="7"
            android:textColor="#000000"
            android:background="#a1a0a0" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_M"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/layout_numpad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="120">

        <Button
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MC"
            android:id="@+id/buttonMC" />
        <Button
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MR"
            android:id="@+id/buttonMR" />
        <Button
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M+"
            android:id="@+id/buttonMPlus" />
        <Button
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M-"
            android:id="@+id/buttonMMinus" />
        <Button
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MS"
            android:id="@+id/buttonMS" />
        <Button
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:id="@+id/buttonMScroll" />

    </LinearLayout>
    <TableLayout
        android:id="@+id/layout_numpad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="240"
        >
        <TableRow>
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:id="@+id/button_Math_mod" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sqrt"
                android:id="@+id/button_Math_sqrt" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x^2"
                android:id="@+id/button_Math_xmu2" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/x"
                android:id="@+id/button_Math_1phanX" />
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CE"
                android:id="@+id/button_action_CE" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/button_action_C" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="back"
                android:id="@+id/button_action_back" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/button_Math_divide" />
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/button_numpad_7" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/button_numpad_8" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/button_numpad_9" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:id="@+id/button_Math_multiply" />
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/button_numpad_4" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/button_numpad_5" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/button_numpad_6" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/button_Math_minus" />
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/button_numpad_1" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/button_numpad_2" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/button_numpad_3" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/button_Math_plus" />
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-+"
                android:id="@+id/button_Math_DaoDau" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/button_numpad_0" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:id="@+id/button_numpad_dot" />
            <Button
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/button_action_equal" />
        </TableRow>

    </TableLayout>
</RelativeLayout>
